<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/coin_textview"
            android:layout_alignParentEnd="true"
            android:text="test"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/coin_title"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/coin_textview"
            android:maxLines="1"
            android:text="@string/coin_title"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/initial_textview"
            android:layout_alignParentEnd="true"
            android:text="test"
            android:layout_below="@+id/coin_textview"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/initial_title"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/initial_textview"
            android:maxLines="1"
            android:text="Initial Purchase"
            android:textStyle="bold"
            android:layout_below="@+id/coin_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/current_textview"
            android:layout_alignParentEnd="true"
            android:text="test"
            android:layout_below="@+id/initial_textview"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/current_title"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/current_textview"
            android:maxLines="1"
            android:text="Current Price"
            android:textStyle="bold"
            android:layout_below="@+id/initial_title"/>

        <TextView
            android:id="@+id/change_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/current_textview"
            android:layout_alignParentEnd="true"
            android:text="test" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/change_title"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/change_textview"
            android:maxLines="1"
            android:text="@string/percentage_title"
            android:textStyle="bold"
            android:layout_below="@+id/current_title"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>