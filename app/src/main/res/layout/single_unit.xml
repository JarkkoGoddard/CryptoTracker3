<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/coin_textview"
            android:layout_alignParentEnd="true"
            android:text="test"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/coin_title"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/coin_textview"
            android:maxLines="1"
            android:text="@string/coin_title"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/initial_textview"
            android:layout_alignParentEnd="true"
            android:text="test"
            android:layout_below="@+id/coin_textview"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/initial_title"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/initial_textview"
            android:maxLines="1"
            android:text="@string/current_price_title"
            android:textStyle="bold"
            android:layout_below="@+id/coin_title"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>